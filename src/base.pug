extends ../src/layout

block content
  .container.main
    .col-sm-12
      header
        h2.banner-client= info[0].advertiser
        h3.banner-campaing= info[0].campaign
      .main-container
        ul.list-names
          li
            span.banner-name Banner Name
            span.zip-sizes Zip Sizes
            span.backup-image Backup Image
        ul.banner-list
          - for(var i = 0; i < info.length; i++) {
              -var arraySizes = info[i].sizes;
              -var arrayFileSize = info[i].fileSize;
              -var arrayPath = info[i].path;
              -for (var j = 0; j < arraySizes.length && arrayFileSize.length && arrayPath.length; j++) {
                .li
                  div(id="heading_"+arraySizes[j]).card-header
                    a(href="./"+arrayPath[j] target="_blank")= arraySizes[j]
                    span(class="zip-size")=arrayFileSize[j]
              -}
          - }