        });

      //- clone ISI
        function cloneISI (){
          if (this.getElementById('isi') != null) {
              var isi = this.getElementById('isi').cloneNode(true);
              isi.className += "uat";
              isi.setAttribute('id', 'isi-clone');
              this.querySelectorAll('body')[0].appendChild(isi);
          }
          return this;
        }
      });

